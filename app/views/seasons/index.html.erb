<h1>Listing seasons</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Year start</th>
    <th>Year end</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @seasons.each do |season| %>
  <tr>
    <td><%= season.number %></td>
    <td><%= season.year_start %></td>
    <td><%= season.year_end %></td>
    <td><%= link_to 'Show', season %></td>
    <td><%= link_to 'Edit', edit_season_path(season) %></td>
    <td><%= link_to 'Destroy', season, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

